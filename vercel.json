{
  "version": 2,
  "name": "ziweidoushu",
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "functions": {
    "api-server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}