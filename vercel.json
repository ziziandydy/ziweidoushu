{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/zh-TW/"
    },
    {
      "source": "/(en|zh-TW)",
      "destination": "/$1/index.html"
    },
    {
      "source": "/(en|zh-TW)/:page",
      "destination": "/$1/:page.html"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/page?page=sitemap"
    },
    {
      "source": "/(en|zh-TW)/blog",
      "destination": "/api/blog-page?locale=$1"
    },
    {
      "source": "/(en|zh-TW)/blog/:slug",
      "destination": "/api/blog/page/:slug?locale=$1"
    },
    {
      "source": "/blog",
      "destination": "/zh-TW/blog"
    },
    {
      "source": "/blog/:slug",
      "destination": "/zh-TW/blog/:slug"
    },
    {
      "source": "/admin-login",
      "destination": "/api/page?page=admin-login"
    },
    {
      "source": "/admin-dashboard",
      "destination": "/api/page?page=admin-dashboard"
    }
  ],
  "headers": [
    {
      "source": "/styles.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|mjs)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "text/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/favicon\\.(svg|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|webp|svg|gif)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        }
      ]
    },
    {
      "source": "/locales/:locale.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(en|zh-TW)/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
