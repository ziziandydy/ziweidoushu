  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "echo 'Build output already committed to git. Skipping build step.'",
    "build:ts": "tsc",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css --minify",
    "dev:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css --watch",
    "clean": "rimraf build",
    "rebuild": "npm run clean && npm run build:ts && npm run build:css",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "format": "prettier --write ./src/**.ts ./test/**.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "migrate": "node scripts/run-migration.js",
    "migrate:002": "node scripts/run-migration.js 002",
    "verify-migration": "node scripts/verify-migration.js"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.0",
